{
  "info": {
    "name": "User Management API - Collection",
    "_postman_id": "user-management-api-sample",
    "description": "Sample requests for the User Management API (Basic Auth).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Alice\", \"email\": \"alice@example.com\", \"role\": \"user\"}"
        },
        "url": {
          "raw": "http://localhost:3000/api/users",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "users"
          ]
        },
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{basic_user}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{basic_pass}}",
              "type": "string"
            }
          ]
        }
      }
    },
    {
      "name": "List Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/users",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "users"
          ]
        },
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{basic_user}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{basic_pass}}",
              "type": "string"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "basic_user",
      "value": "admin"
    },
    {
      "key": "basic_pass",
      "value": "password"
    }
  ]
}